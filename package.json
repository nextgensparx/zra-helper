{
  "name": "zra-helper",
  "repository": "github:siphomateke/zra-helper",
  "homepage": "https://github.com/siphomateke/zra-helper",
  "bugs": {
    "url": "https://github.com/siphomateke/zra-helper/issues"
  },
  "version": "1.3.1",
  "description": "A browser extension that automates various aspects of the ZRA website.",
  "scripts": {
    "serve": "vue-cli-service build --mode development --watch",
    "serve:firefox": "cross-env BROWSER=firefox yarn run serve",
    "serve:chrome": "cross-env BROWSER=chrome yarn run serve",
    "build": "vue-cli-service build",
    "build:firefox": "cross-env BROWSER=firefox yarn run build",
    "build:chrome": "cross-env BROWSER=chrome yarn run build",
    "build:all": "yarn run build:firefox && yarn run build:chrome",
    "lint": "vue-cli-service lint --format stylish --mode production",
    "devtools": "vue-devtools",
    "postversion": "concurrently \"git push --tags\" \"yarn run build:all\""
  },
  "contributors": [
    "rahensonzam",
    "siphomateke"
  ],
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.2.0",
    "axios": "^0.18.0",
    "buefy": "^0.7.2",
    "bulma": "^0.7.1",
    "bulma-tooltip": "^2.0.2",
    "md5": "^2.2.1",
    "moment": "^2.22.2",
    "ocrad.js": "0.0.1",
    "papaparse": "^4.5.0",
    "text-table": "^0.2.0",
    "vue": "^2.5.17",
    "vue-clipboard2": "^0.2.1",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.18.1",
    "vuex": "^3.0.1",
    "webextension-polyfill": "^0.2.1"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^65.0.0",
    "@vue/cli-plugin-babel": "^3.4.1",
    "@vue/cli-plugin-eslint": "^3.4.1",
    "@vue/cli-service": "^3.4.1",
    "@vue/devtools": "^4.1.5",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "imports-loader": "^0.8.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-cli-plugin-browser-extension": "https://github.com/siphomateke/vue-cli-plugin-browser-extension#add-manifest-transformer",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint"
    ],
    "*.vue": [
      "yarn run lint"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
