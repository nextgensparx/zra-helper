{
  "manifest_version": 2,
  "name": "ZRA Helper",
  "homepage_url": "https://github.com/siphomateke/zra-helper/",
  "icons": {
    "48": "icons/48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "pageCapture",
    "downloads",
    "tabs",
    "storage",
    "https://www.zra.org.zm/*"
  ],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "ZRA Helper"
  },
  "applications": {
    "gecko": {
      "id": "zra-helper@siphomateke.github.com"
    }
  }
}
