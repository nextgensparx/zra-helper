{
  "manifest_version": 2,
  "name": "ZRA Helper",
  "homepage_url": "https://github.com/siphomateke/zra-helper/",
  "icons": {
    "48": "icons/48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.zra.org.zm/login.htm*"],
      "js": ["content_scripts/pages/login_page.js"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "pageCapture",
    "downloads",
    "tabs",
    "storage",
    "https://www.zra.org.zm/*",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "ZRA Helper"
  },
  "applications": {
    "gecko": {
      "id": "zra-helper@siphomateke.github.com"
    }
  }
}
