  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "serve",
      "problemMatcher": {
        "owner": "ts",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^ERROR\\sin\\s(.+)$",
            "file": 1
          },
          {
            "regexp": "^(\\d+):(\\d+)\\s(.+?)$",
            "line": 1,
            "column": 2,
            "message": 3
          }
        ]
      },
    },
    {
      "type": "npm",
      "script": "serve:chrome",
      "problemMatcher": {
        "owner": "ts",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^ERROR\\sin\\s(.+)$",
            "file": 1
          },
          {
            "regexp": "^(\\d+):(\\d+)\\s(.+?)$",
            "line": 1,
            "column": 2,
            "message": 3
          }
        ]
      },
    },
    {
      "type": "npm",
      "script": "serve:firefox",
