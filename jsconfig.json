{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "$tests/*": [
        "./tests/*"
      ],
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "typeAcquisition": {
    "include": [
      "firefox-webext-browser",
      "chrome"
    ]
  }
}